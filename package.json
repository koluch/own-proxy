{
  "name": "own-proxy",
  "version": "0.2.0",
  "description": "Simple extension to support proxy connecting vie authorizes SOCKS5",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./build && rm -rf ./*.zip",
    "build:copy": "mkdir -p build && cp -R manifest.json LICENSE src build",
    "build:pack": "VERSION=`node -p -e \"require('./package.json').version\"` && cd build && zip -r ../own-proxy-${VERSION}.zip ./*",
    "build": "npm run clean && npm run build:copy && npm run build:pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koluch/own-proxy.git"
  },
  "author": "Nikolai Mavrenkov <koluch@koluch.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/koluch/own-proxy/issues"
  },
  "homepage": "https://github.com/koluch/own-proxy#readme",
  "dependencies": {},
  "devDependencies": {
    "eslint": "^6.7.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "trailing-comma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
