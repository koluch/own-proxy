{
  "manifest_version": 2,
  "name": "Own-proxy",
  "description": "Simple extension to support proxy connecting vie authorizes SOCKS5",
  "version": "1.0",

  "icons": {
    "48": "icons/proxy-off-icon.svg"
  },

  "browser_action": {
    "default_icon": "icons/proxy-off-icon.svg",
    "default_title": "Turn proxy on"
  },

  "applications": {
    "gecko": {
      "strict_min_version": "56.0a1"
    }
  },

  "background": {
    "scripts": [
      "common/init.js",
      "common/settings.js",
      "common/isEnabled.js",
      "background/proxy-handler.js"
    ]
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "permissions": ["proxy", "storage", "<all_urls>"]
}
